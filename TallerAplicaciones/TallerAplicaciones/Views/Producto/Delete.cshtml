@model TallerAplicaciones.Models.DeleteProductModel

@{
    ViewBag.Title = "Borrar producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Borrar Producto</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Delete Product</legend>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        @Html.HiddenFor(m => m.idProducto)
        <input type="submit" value="Borrar Producto id @Model.idProducto" /> |
        @Html.ValidationMessageFor(model => model.idProducto)

        @Html.ActionLink("Back to List", "List")
    </p>
}
